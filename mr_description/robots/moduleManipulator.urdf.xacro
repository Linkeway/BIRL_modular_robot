  <xacro:I_module name="I1" parent="base_link">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:I_module>

  <xacro:T_module name="T2" parent="I1_Lr_Link_3">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:T_module>
  
  <xacro:T_invert name="T3" parent="T2_Lr_Link_3" >
    <origin xyz="0 0 0.005" rpy="0 0 0" />
  </xacro:T_invert>

  <xacro:T_module name="T4" parent="T3_Lr_Link_0">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:T_module>

  <xacro:I_module name="I5" parent="T4_Lr_Link_3">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:I_module>
  
  <xacro:G_module name="G6" parent="I5_Lr_Link_3">
    <origin xyz="0 0 0" rpy="${pi*0.5} 0 0" />
  </xacro:G_module>
  

  

